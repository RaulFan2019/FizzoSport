<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- pb 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#00625f62"
                android:centerY="0.95"
                android:endColor="#00625f62"
                android:startColor="#00625f62" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <!-- pb 第二层进度条 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#00ffb600"
                    android:centerY="0.85"
                    android:endColor="#00ffcb00"
                    android:startColor="#00ffd300" />
                <corners android:radius="5dp"/>
            </shape>
        </clip>
    </item>
    <!-- pb首页进度条 -->
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%"
               android:drawable="@drawable/ic_progress_bar" />
