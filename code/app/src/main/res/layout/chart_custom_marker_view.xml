<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="67dp"
    android:layout_height="180dp"
    android:background="@android:color/transparent" >

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:background="@drawable/bg_chart_marker"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="111"
        android:textSize="11.7dp"
        android:textColor="@android:color/white"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#adadad"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/v_mark_accent"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="@drawable/ic_mark_accent"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/v_mark_contrast"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:background="@drawable/ic_mark_contrast"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
