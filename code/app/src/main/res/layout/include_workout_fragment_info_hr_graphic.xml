<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:background="@drawable/bg_hr_graphic"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_graphic_range_0"
            style="@style/WorkoutHrGraphicRangeTv"/>

        <TextView
            android:id="@+id/tv_graphic_range_1"
            style="@style/WorkoutHrGraphicRangeTv"/>

        <TextView
            android:id="@+id/tv_graphic_range_2"
            style="@style/WorkoutHrGraphicRangeTv"/>

        <TextView
            android:id="@+id/tv_graphic_range_3"
            style="@style/WorkoutHrGraphicRangeTv"/>

        <TextView
            android:id="@+id/tv_graphic_range_4"
            style="@style/WorkoutHrGraphicRangeTv"/>

        <TextView
            android:id="@+id/tv_graphic_range_5"
            style="@style/WorkoutHrGraphicRangeTv"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/WorkoutHrGraphicZoneTv"
            android:text="@string/name_zone_0" />
        <TextView
            style="@style/WorkoutHrGraphicZoneTv"
            android:text="@string/name_zone_1" />
        <TextView
            style="@style/WorkoutHrGraphicZoneTv"
            android:text="@string/name_zone_2" />
        <TextView
            style="@style/WorkoutHrGraphicZoneTv"
            android:text="@string/name_zone_3" />
        <TextView
            style="@style/WorkoutHrGraphicZoneTv"
            android:text="@string/name_zone_4" />
        <TextView
            style="@style/WorkoutHrGraphicZoneTv"
            android:text="@string/name_zone_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_zone_time_0"
            style="@style/WorkoutHrGraphicTimeTv"/>
        <TextView
            android:id="@+id/tv_zone_time_1"
            style="@style/WorkoutHrGraphicTimeTv" />
        <TextView
            android:id="@+id/tv_zone_time_2"
            style="@style/WorkoutHrGraphicTimeTv"/>
        <TextView
            android:id="@+id/tv_zone_time_3"
            style="@style/WorkoutHrGraphicTimeTv"/>
        <TextView
            android:id="@+id/tv_zone_time_4"
            style="@style/WorkoutHrGraphicTimeTv"/>
        <TextView
            android:id="@+id/tv_zone_time_5"
            style="@style/WorkoutHrGraphicTimeTv"/>
    </LinearLayout>

</LinearLayout>