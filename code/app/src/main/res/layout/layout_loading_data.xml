<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:id="@+id/v_loading_anim"
            android:layout_marginTop="110dp"
            android:layout_width="66.2dp"
            android:layout_height="65.7dp"
            android:background="@drawable/ic_loading_data"/>

        <View
            android:id="@+id/v_loading_anim_line"
            android:layout_marginTop="8.5dp"
            android:layout_width="41dp"
            android:layout_height="3.8dp"
            android:background="@drawable/ic_loading_data_shadow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_loading_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="invisible">

        <View
            android:layout_marginTop="137dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_loading_error"/>

        <TextView
            android:id="@+id/tv_load_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#989da3"
            android:textSize="15.7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9.8dp"
            android:textColor="#989da3"
            android:text="@string/loading_again"/>
    </LinearLayout>

</RelativeLayout>