<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:minHeight="62dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <View
            android:id="@+id/v_sport_type"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/tv_sport_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.7dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/tv_mostly"/>

        <TextView
            android:id="@+id/tv_sport_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12.7dp"
            android:textColor="@color/tv_mostly"
            android:gravity="center_vertical|right"/>

        <View
            android:layout_width="9.6dp"
            android:layout_height="16.3dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/ic_arrow_right"/>

    </LinearLayout>

    <View
        style="@style/DividerH"/>

</LinearLayout>