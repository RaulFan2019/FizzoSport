<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_base"
    android:orientation="vertical">

    <!-- title -->
    <RelativeLayout style="@style/Title_Layout">

        <TextView
            android:id="@+id/btn_back"
            style="@style/Title_BackButton" />

        <TextView
            style="@style/Title_TitleTv"
            android:text="@string/run_out_room" />

        <LinearLayout
            style="@style/TitleRightBtnLy">
            <ImageButton
                style="@style/Title_RightButton"
                android:src="@drawable/ic_setting"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_marginTop="110dp"
            android:layout_width="66.2dp"
            android:layout_height="65.7dp"
            android:background="@drawable/ic_loading_data"/>

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#989da3"
            android:textSize="15.7dp"
            android:text="努力开发中.."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#989da3"
            android:textSize="9.8dp"
            android:text="敬请期待" />

    </LinearLayout>
</LinearLayout>