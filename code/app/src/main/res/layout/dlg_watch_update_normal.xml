<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_normal"
    android:layout_width="264dp"
    android:layout_height="192dp"
    android:background="@drawable/bg_shape_fillet_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_marginTop="28dp"
        android:layout_width="46dp"
        android:layout_height="76dp"
        android:background="@drawable/ic_watch_update"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/tv_mostly"
        android:textSize="15.7dp"
        android:text="@string/tip_normal_update_watch"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="108dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_dlg_rect_btn_primary"
            android:textColor="@android:color/white"
            android:textSize="15.7dp"
            android:text="@string/action_app_cancel"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="108dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_dlg_rect_btn_accent"
            android:textColor="@android:color/white"
            android:textSize="15.7dp"
            android:text="@string/action_app_update"/>

    </LinearLayout>

</LinearLayout>