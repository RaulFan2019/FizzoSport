<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="264dp"
    android:layout_height="192dp"
    android:background="@drawable/bg_dlg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <cn.hwh.sports.ui.common.CircularImage
        android:id="@+id/iv_store_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:textColor="@color/tv_mostly"
        android:textSize="@dimen/tv_dialog_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_store_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="11111111111111"
        android:textColor="@color/tv_secondly"
        android:textSize="@dimen/tv_tip_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="105dp"
            android:layout_height="33dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:gravity="center"
                android:textSize="@dimen/tv_button_secondary"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_dlg_rect_btn_primary"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="105dp"
            android:layout_height="33dp"
            android:layout_marginLeft="23dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/select"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/tv_button_secondary"
                android:background="@drawable/bg_dlg_rect_btn_accent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>