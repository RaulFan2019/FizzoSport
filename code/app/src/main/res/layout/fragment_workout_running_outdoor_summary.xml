<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  距离 时间 配速 -->
    <View
        style="@style/DividerH"
        android:layout_marginTop="38dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_workout_big_data">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:id="@+id/tv_length"
                style="@style/WorkoutValueTv"
                android:textSize="58dp"/>
            <TextView
                style="@style/WorkoutKeyTv"
                android:text="@string/unit_length"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.7dp"
                android:textColor="@color/tv_mostly"/>
            <TextView
                android:id="@+id/tv_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.7dp"
                android:textColor="@color/tv_mostly"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/DividerH"/>
    <!-- 平均强度，消耗 -->
    <LinearLayout
        style="@style/WorkoutLineLl">
        <LinearLayout
            style="@style/WorkoutDataLl">
            <TextView
                android:id="@+id/tv_power"
                style="@style/WorkoutValueTv"/>
            <TextView
                style="@style/WorkoutKeyTv"
                android:text="@string/name_avg_power"/>
        </LinearLayout>
        <LinearLayout
            style="@style/WorkoutDataLl">
            <TextView
                android:id="@+id/tv_calorie"
                style="@style/WorkoutValueTv"/>
            <TextView
                style="@style/WorkoutKeyTv"
                android:text="@string/name_consume_with_unit"/>
        </LinearLayout>
    </LinearLayout>
    <!--  平均心率 -->
    <LinearLayout
        style="@style/WorkoutLineLl">
        <LinearLayout
            style="@style/WorkoutDataLl">
            <TextView
                android:id="@+id/tv_hr_avg"
                style="@style/WorkoutValueTv"/>
            <TextView
                style="@style/WorkoutKeyTv"
                android:text="@string/name_hr_avg"/>
        </LinearLayout>
        <LinearLayout
            style="@style/WorkoutDataLl">
            <TextView
                android:id="@+id/tv_hr_high"
                style="@style/WorkoutValueTv"/>
            <TextView
                style="@style/WorkoutKeyTv"
                android:text="@string/name_hr_high"/>
        </LinearLayout>
    </LinearLayout>
    <!--  平均速度 -->
    <LinearLayout
        style="@style/WorkoutLineLl">
        <LinearLayout
            style="@style/WorkoutDataLl">
            <TextView
                android:id="@+id/tv_pace_avg"
                style="@style/WorkoutValueTv"/>
            <TextView
                style="@style/WorkoutKeyTv"
                android:text="@string/name_avg_power"/>
        </LinearLayout>
        <LinearLayout
            style="@style/WorkoutDataLl">
            <TextView
                android:id="@+id/tv_cadence"
                style="@style/WorkoutValueTv"/>
            <TextView
                style="@style/WorkoutKeyTv"
                android:text="@string/name_consume_with_unit"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/WorkoutLineLl">
        <LinearLayout
            style="@style/WorkoutDataLl">
            <TextView
                style="@style/WorkoutValueTv"/>
            <TextView
                style="@style/WorkoutKeyTv"
                android:text="@string/name_avg_power"/>
        </LinearLayout>
        <LinearLayout
            style="@style/WorkoutDataLl">
            <TextView
                style="@style/WorkoutValueTv"/>
            <TextView
                style="@style/WorkoutKeyTv"
                android:text="@string/name_consume_with_unit"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>