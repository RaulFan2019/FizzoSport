<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:minHeight="58dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <cn.hwh.sports.ui.common.CircularImage
        android:id="@+id/iv_store_logo"
        android:layout_width="49dp"
        android:layout_height="49dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="14.4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_mostly"
                android:textSize="@dimen/tv_item_list_title"/>
            <TextView
                android:id="@+id/tv_store_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_secondly"
                android:textSize="@dimen/tv_tip_normal"/>
        </LinearLayout>

        <View style="@style/DividerH"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>