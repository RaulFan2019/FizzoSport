<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="264dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shape_fillet_white"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="1"
        android:text="title 123"
        android:textColor="@color/tv_mostly"
        android:textSize="15.7dp" />

    <View
        style="@style/DividerH"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/tv_choice_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="0dp"
        android:textColor="@color/tv_secondly"
        android:textSize="11.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="108dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_dlg_rect_btn_primary"
            android:text="@string/action_cancel"
            android:textColor="@android:color/white"
            android:textSize="15.7dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="108dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_dlg_rect_btn_accent"
            android:textColor="@android:color/white"
            android:textSize="15.7dp" />

    </LinearLayout>
</LinearLayout>