<?xml version="1.0" encoding="utf-8"?>
<cn.hwh.sports.ui.bannertoast.ViewContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pop_view_content_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/accent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手环电量过低"
                android:textColor="@android:color/white"
                android:textSize="14.7dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手环在低电量状态下运作可能运动检测不精确，请充电！"
                android:textColor="@android:color/white"
                android:textSize="9.8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_know"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="知道了"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="11.7dp"/>
    </LinearLayout>
</cn.hwh.sports.ui.bannertoast.ViewContainer>