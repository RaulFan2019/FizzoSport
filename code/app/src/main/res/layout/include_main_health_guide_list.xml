<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <!-- 上次锻炼 -->
    <LinearLayout
        android:id="@+id/ll_last_sport"
        style="@style/MainGuideLayout">

        <View
            android:id="@+id/v_last_sport_type"
            style="@style/MainGuideIcon"
            android:background="@drawable/ic_main_running" />

        <LinearLayout style="@style/MainGuideTitleLayout">

            <TextView
                android:id="@+id/tv_last_sport_type"
                style="@style/MainGuideTitle"
                android:text="111111" />

            <TextView
                android:id="@+id/tv_last_sport_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="11:55"
                android:textColor="@color/tv_secondly"
                android:textSize="11.7dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_last_sport_duration"
            style="@style/MainGuideValue" />

        <View style="@style/MainGuideArrow" />

    </LinearLayout>

    <View style="@style/DividerH" />

    <!-- 活力 -->
    <LinearLayout
        android:id="@+id/ll_body"
        style="@style/MainGuideLayout"
        android:visibility="gone">

        <View
            style="@style/MainGuideIcon"
            android:background="@drawable/ic_main_body" />

        <LinearLayout style="@style/MainGuideTitleLayout">

            <TextView
                android:id="@+id/tv_body_title"
                style="@style/MainGuideTitle" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sleep_info"
            style="@style/MainGuideValue" />

        <View style="@style/MainGuideArrow" />

    </LinearLayout>

    <View style="@style/DividerH" android:visibility="gone"/>

    <!-- 小助手 -->
    <LinearLayout
        android:id="@+id/ll_help"
        style="@style/MainGuideLayout">

        <View
            style="@style/MainGuideIcon"
            android:background="@drawable/ic_main_body" />

        <LinearLayout style="@style/MainGuideTitleLayout">

            <TextView
                style="@style/MainGuideTitle"
                android:text="@string/name_help" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tv_help"
            style="@style/MainGuideValue" />

        <View style="@style/MainGuideArrow" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>