<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <cn.hwh.sports.ui.common.CircleProgressView
        android:id="@+id/progressbar_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:bgColorProgress="#00000000"
        app:progressColor="#12d25d"
        app:radiusProgress="48dp"
        app:strokeWidthProgress="4dp" />


    <Button
        android:id="@+id/btn_pause"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:background="@drawable/selector_btn_run_pause"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

</FrameLayout>