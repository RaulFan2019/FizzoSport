<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="horizontal"
        android:layout_marginTop="9.5dp"
        android:background="@android:color/white">

        <LinearLayout
            style="@style/WorkoutCalendarDataLl">
            <TextView
                android:id="@+id/tv_day_time"
                style="@style/WorkoutCalendarDataValue" />
            <TextView
                style="@style/WorkoutCalendarDataName"
                android:text="分钟"/>
        </LinearLayout>


        <View
            style="@style/DividerV"
            android:layout_marginTop="9.5dp"
            android:layout_marginBottom="9.5dp"/>

        <LinearLayout
            style="@style/WorkoutCalendarDataLl">
            <TextView
                android:id="@+id/tv_day_calorie"
                style="@style/WorkoutCalendarDataValue" />
            <TextView
                style="@style/WorkoutCalendarDataName"
                android:text="千卡"/>
        </LinearLayout>

        <View
            style="@style/DividerV"
            android:layout_marginTop="9.5dp"
            android:layout_marginBottom="9.5dp"/>

        <LinearLayout
            style="@style/WorkoutCalendarDataLl">
            <TextView
                android:id="@+id/tv_day_step"
                style="@style/WorkoutCalendarDataValue" />
            <TextView
                style="@style/WorkoutCalendarDataName"
                android:text="步数"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_data_none"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <View
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:background="#f5f5f5"
            android:layout_marginRight="10dp"></View>

        <TextView
            android:id="@+id/tv_data_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="12.7dp"
            android:textColor="@color/tv_secondly"
            android:text="当日无数据"/>

        <View
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:background="#f5f5f5"
            android:layout_marginLeft="10dp"></View>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_day"
        android:layout_marginTop="9.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"/>
</LinearLayout>