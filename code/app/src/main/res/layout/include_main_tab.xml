<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49.8dp"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <View style="@style/DividerH"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_health"
            style="@style/TabRootLayout">

            <ImageView
                android:id="@+id/iv_health"
                style="@style/TabRootLayout_ImageView"
                android:src="@drawable/ic_tab_main_health_nomal" />

            <TextView
                android:id="@+id/tv_health"
                style="@style/TabRootLayout_TextView"
                android:text="@string/tab_health" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_add_data"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_tab_main_add_data"/>

        <LinearLayout
            android:id="@+id/ll_user"
            style="@style/TabRootLayout">

            <ImageView
                android:id="@+id/iv_user"
                style="@style/TabRootLayout_ImageView"
                android:src="@drawable/ic_tab_main_user_normal" />

            <TextView
                android:id="@+id/tv_user"
                style="@style/TabRootLayout_TextView"
                android:text="@string/tab_user" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>