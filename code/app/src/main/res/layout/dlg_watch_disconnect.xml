<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="276dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shape_fillet_white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_mostly"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="15.7dp"
        android:text="手环未连接"/>

    <View
        android:layout_width="46dp"
        android:layout_height="76dp"
        android:background="@drawable/ic_watch_disconnect_big"/>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_secondly"
        android:gravity="center_horizontal"
        android:layout_marginTop="9.6dp"
        android:textSize="12.7dp"
        android:layout_marginBottom="20dp"
        android:text="请确认您的手环已打开"/>

</LinearLayout>