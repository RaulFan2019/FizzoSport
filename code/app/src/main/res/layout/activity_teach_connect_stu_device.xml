<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_connect_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/stu_device_connecting"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tv_tip_import_active" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/stu_device_connect_tip_1"
        android:textColor="@android:color/white"
        android:alpha="0.5"
        android:textSize="11.7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stu_device_connect_tip_2"
        android:textColor="@color/tv_secondly"
        android:textSize="@dimen/tv_tip_normal"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:gravity="center_horizontal|center_vertical">

        <View
            android:id="@+id/v_connecting"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_device_scan_or_connecting"/>

        <cn.hwh.sports.ui.common.CircularImage
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:background="@drawable/bg_user_photo"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <cn.hwh.sports.ui.common.CircularImage
            android:id="@+id/iv_avatar"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal|center_vertical"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.7dp"
        android:textColor="@color/tv_secondly"
        android:layout_marginBottom="15dp"
        android:text="@string/stu_device_connect_stop"/>
</LinearLayout>