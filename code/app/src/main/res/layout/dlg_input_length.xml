<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="264dp"
    android:layout_height="175dp"
    android:background="@drawable/bg_dlg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:textColor="@color/tv_mostly"
        android:textSize="@dimen/tv_dialog_title"
        android:text="输入本次跑步距离"/>

    <View
        style="@style/DividerH"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_dialog_input"
            android:layout_width="192dp"
            android:layout_height="39dp"
            android:background="@color/bg_base_gray"
            android:textColor="@color/tv_mostly"
            android:digits="0123456789."
            android:inputType="number"
            android:maxLength="6"
            android:textSize="22dp"
            android:text="13.45"
            android:paddingRight="5dp"
            android:selectAllOnFocus="true"
            android:gravity="right|center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/tv_secondly"
            android:textSize="14.7dp"
            android:text="公里"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="228dp"
        android:layout_height="33dp"
        android:text="确认"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="@dimen/tv_button_secondary"
        android:background="@drawable/bg_dlg_rect_btn_accent"/>

</LinearLayout>